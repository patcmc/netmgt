<div id="<%= dom_id(@user_contact) %>" class="max-w-sm rounded overflow-hidden shadow-lg bg-white hover:shadow-xl transition-shadow duration-300">
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2 text-center text-primary"><%= @user_contact.name %></div>
    <p class="text-gray-700 text-base mb-2">
      <i class="fas fa-envelope mr-2 text-primary"></i>Email: <%= @user_contact.email %>
    </p>
    <p class="text-gray-700 text-base">
      <i class="fas fa-phone mr-2 text-primary"></i>Phone: <%= @user_contact.phone %>
    </p>
  </div>
</div>
