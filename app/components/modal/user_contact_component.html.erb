<div
  id="contact-modal-overlay"
  data-contacts--modal-target="overlay"
  data-action="click->contact-modal#close keydown.esc->contact-modal#close"
  class="fixed inset-0 bg-black bg-opacity-50 hidden"
></div>
<div
  id="contact-modal-modal"
  data-cy="add-contact-modal"
  data-contacts--modal-target="modal"
  class="fixed inset-0 flex items-center justify-center hidden"
>
  <div class="bg-white p-6 rounded-lg shadow-lg relative">
    <button
      data-action="contacts--modal#close"
      class="absolute top-0 right-0 m-4 text-gray-500 hover:text-gray-700 text-2xl font-bold"
    >
      &times;
    </button>

    <%= render(Form::UserContactComponent.new(user_contact: @user_contact, url: app_contacts_path))
    %>
  </div>
</div>
