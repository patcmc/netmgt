<div class="container mx-auto p-4">
  <%= breadcrumb %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- New Section -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-xl font-bold mb-2">User Interactions</h2>
      <p class="text-gray-700">
        Monitor user interactions and activities on the network.
      </p>
    </div>

    <!-- Recent Activities Section -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <h2 class="text-2xl font-bold mb-4">Recent Activities</h2>
        <div class="mt-3">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Activity</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">Logged In</td>
                <td class="px-6 py-4 whitespace-nowrap">John Doe</td>
                <td class="px-6 py-4 whitespace-nowrap">2023-10-01</td>
              </tr>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">Updated Profile</td>
                <td class="px-6 py-4 whitespace-nowrap">Jane Smith</td>
                <td class="px-6 py-4 whitespace-nowrap">2023-10-02</td>
              </tr>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">Created Event</td>
                <td class="px-6 py-4 whitespace-nowrap">Alice Johnson</td>
                <td class="px-6 py-4 whitespace-nowrap">2023-10-03</td>
              </tr>
              <!-- More rows -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-8">
    <h2 class="text-2xl font-bold mb-4">Charts</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="bg-white shadow-md rounded-lg p-6">
        <h3 class="text-xl font-bold mb-2">Monthly Active Users</h3>
        <canvas id="chart1"></canvas>
      </div>
      <div class="bg-white shadow-md rounded-lg p-6">
        <h3 class="text-xl font-bold mb-2">Events Created</h3>
        <canvas id="chart2"></canvas>
      </div>
    </div>
  </div>

  <div class="mt-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-xl font-bold mb-2">Total Users</h2>
        <p class="text-gray-700">1,234</p>
      </div>
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-xl font-bold mb-2">New Contacts</h2>
        <p class="text-gray-700">56</p>
      </div>
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-xl font-bold mb-2">Active Sessions</h2>
        <p class="text-gray-700">78</p>
      </div>
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-xl font-bold mb-2">Pending Requests</h2>
        <p class="text-gray-700">12</p>
      </div>
    </div>
  </div>
</div>

<!-- Load Chart.js from a reliable CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- Initialize charts after DOM is fully loaded -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Initialize Monthly Active Users Chart
    const ctx1 = document.getElementById("chart1").getContext("2d");
    const chart1 = new Chart(ctx1, {
      type: "bar",
      data: {
        labels: [
          "January",
          "February",
          "March",
          "April",
          "May",
          "June",
          "July",
          "August",
          "September",
          "October",
        ],
        datasets: [
          {
            label: "Active Users",
            data: [120, 150, 180, 200, 220, 250, 300, 320, 350, 400],
            backgroundColor: "rgba(75, 192, 192, 0.2)",
            borderColor: "rgba(75, 192, 192, 1)",
            borderWidth: 1,
          },
        ],
      },
      options: {
        scales: {
          y: {
            beginAtZero: true,
          },
        },
      },
    });

    // Initialize Events Created Chart
    const ctx2 = document.getElementById("chart2").getContext("2d");
    const chart2 = new Chart(ctx2, {
      type: "line",
      data: {
        labels: [
          "January",
          "February",
          "March",
          "April",
          "May",
          "June",
          "July",
          "August",
          "September",
          "October",
        ],
        datasets: [
          {
            label: "Events Created",
            data: [5, 10, 15, 20, 25, 30, 35, 40, 45, 50],
            backgroundColor: "rgba(153, 102, 255, 0.2)",
            borderColor: "rgba(153, 102, 255, 1)",
            borderWidth: 1,
            fill: true,
          },
        ],
      },
      options: {
        scales: {
          y: {
            beginAtZero: true,
          },
        },
      },
    });
  });
</script>
