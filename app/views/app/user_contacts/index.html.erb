<div class="container mx-auto p-4 min-h-screen" data-controller="contacts--modal">
  <%= render BreadcrumbComponent.new(links: [{ name: 'Home', path: '/' }, { name: 'App', path:
  '/app' }, { name: 'Contacts', path: nil }]) %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Contacts</h1>
    <button
      data-action="contacts--modal#open"
      class="bg-primary hover:bg-primary-dark text-white font-bold py-2 px-4 rounded"
    >
      Add Contact
    </button>
  </div>

  <%= turbo_stream_from "user_contacts_#{Current.user.id}" %>
  <div
    id="user-contacts"
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
  >
    <%= render(Card::UserContactComponent.with_collection(@user_contacts)) %>
  </div>

  <%= render(Modal::UserContactComponent.new(user_contact: @user_contact, url: app_contacts_path))
  %>
</div>
