<div class="container mx-auto p-4 min-h-screen" data-controller="modal">
  <%= render BreadcrumbComponent.new(links: [{ name: 'Home', path: '/' }, {
  name: 'App', path: '/app' }, { name: 'Contacts', path: nil }]) %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Contacts</h1>
    <button
      data-action="modal#open"
      class="bg-primary hover:bg-primary-dark text-white font-bold py-2 px-4 rounded"
    >
      Add Contact
    </button>
  </div>

  <div
    id="user-contacts-list"
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
  >
    <% @user_contacts.each do |user_contact| %> <%=
    render(Card::UserContactComponent.new(user_contact: user_contact)) %> <% end
    %>
  </div>

  <%= render(Modal::UserContactComponent.new(user_contact: @user_contact, url:
  app_contacts_path)) %>
</div>
