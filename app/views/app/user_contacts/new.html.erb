<div class="container mx-auto p-4 min-h-screen">
  <%= render BreadcrumbComponent.new(links: [{ name: 'Home', path: '/' }, {
  name: 'App', path: '/app' }, { name: 'Contacts', path: nil }]) %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Add Contact</h1>
  </div>

  <div class="inset-0 flex items-center justify-center">
    <div class="mx-auto p-6 bg-white rounded-lg shadow-md">
      <%= render Form::UserContactComponent.new(user_contact: @user_contact,
      url: app_contacts_path) %>
    </div>
  </div>
</div>
